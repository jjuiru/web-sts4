{{>layout/header}}

<h1>게시글 등록</h1>
<div class="col-md-12">
    <div class="col-md-4">
      <form action="/insert" method="post">
            <div class="form-group">
                <label for="title">제품번호</label>
                <input type="text" class="form-control" id="prodId" name="prodId" placeholder="제목을 입력하세요">
            </div>                 
            <div class="form-group">
                <label for="author"> 제품명 </label>
                <input type="text" class="form-control" id="prodName"  name="prodName" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="content"> 가격 </label>
                <textarea class="form-control" id="prodPrice"  name="prodPrice" placeholder="내용을 입력하세요"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">등록</button>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
    </div>
</div>
{{>layout/footer}}